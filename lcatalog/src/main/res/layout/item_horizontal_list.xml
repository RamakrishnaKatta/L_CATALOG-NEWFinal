<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_3"
    app:cardBackgroundColor="@color/iron"
    app:cardCornerRadius="@dimen/margin_3"
    app:cardElevation="@dimen/margin_3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:padding="@dimen/margin_3">

        <RelativeLayout
            android:id="@+id/h_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_3">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/h_item_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_250"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:contentDescription="@null" />

            <LinearLayout
                android:id="@+id/h_item_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h_item_image"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/h_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overlock_sc"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="@string/article_title_text"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_dark"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/h_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/assistant_semibold"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="@string/article_desc_text"
                    android:textColor="@color/primary_darker"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overlock_sc"
                        android:text="@string/article_discount_price_title"
                        android:textAllCaps="true"
                        android:textColor="@color/primary_darker"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_6"
                        android:fontFamily="@font/assistant_semibold"
                        android:paddingEnd="@dimen/margin_0"
                        android:paddingStart="@dimen/margin_10"
                        android:text="@string/article_price_tag_symbol"
                        android:textColor="@color/primary_darker"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/h_item_price_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3"
                        android:fontFamily="@font/assistant_semibold"
                        android:text="@string/article_after_discount_price"
                        android:textColor="@color/primary_darker"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3"
                        android:fontFamily="@font/assistant_semibold"
                        android:paddingEnd="@dimen/margin_10"
                        android:paddingStart="@dimen/margin_0"
                        android:text="@string/article_price_tag"
                        android:textColor="@color/primary_darker"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_darker"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3"
                        android:fontFamily="@font/overlock_sc"
                        android:gravity="center"
                        android:text="@string/article_discount_title"
                        android:textAllCaps="true"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/h_item_discount_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        android:fontFamily="@font/assistant_semibold"
                        android:text="@string/article_discount_value"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/assistant_semibold"
                        android:text="@string/article_percentage_symbol"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_3"
                        android:layout_marginStart="@dimen/margin_10"
                        android:fontFamily="@font/overlock_sc"
                        android:text="@string/article_discount_off"
                        android:textAllCaps="true"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overlock_sc"
                        android:text="@string/article_original_price_title"
                        android:textAllCaps="true"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/assistant_semibold"
                        android:paddingEnd="@dimen/margin_0"
                        android:paddingStart="@dimen/margin_10"
                        android:text="@string/article_price_tag_symbol"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/h_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3"
                        android:fontFamily="@font/assistant_semibold"
                        android:text="@string/article_original_price"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3"
                        android:fontFamily="@font/assistant_semibold"
                        android:paddingEnd="@dimen/margin_10"
                        android:paddingStart="@dimen/margin_0"
                        android:text="@string/article_price_tag"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_medium" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</android.support.v7.widget.CardView>
