<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_6"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/margin_6">

    <RelativeLayout
        android:id="@+id/vendor_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/vendor_list_logo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/vendor_list_logo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_200"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:padding="@dimen/margin_20" />

        </LinearLayout>

        <TextView
            android:id="@+id/vendor_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vendor_list_logo_layout"
            android:fontFamily="@font/overlock_sc"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/margin_6"
            android:text="@string/vendor_title"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_tab_large"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
